.container .nav {
  padding: 10rpx 0;
}
.container .nav .scroll {
  font-size: 40rpx;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
}
.container .nav .scroll ::-webkit-scrollbar {
  width: 4px !important;
  height: 1px !important;
  overflow: auto !important;
  background: transparent !important;
  -webkit-appearance: auto !important;
  display: block;
}
.container .nav .scroll .item {
  display: inline-block;
  padding: 0 30rpx;
}
.container .content .item {
  padding: 20rpx;
  border-bottom: 1rpx dotted #efefef;
}
